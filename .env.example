# ============================================================================
# WhatsApp Multi-Automation - Environment Variables
# ============================================================================

# Database (choose one)
# Option 1: Direct PostgreSQL URL (Render, Heroku, etc.)
DATABASE_URL=postgresql://user:password@host:5432/database

# Option 2: Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_PASSWORD=your-db-password

# Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here
SESSION_SECRET=generate-a-random-32-char-string

# Server
PORT=3000
NODE_ENV=production

# Session Cookies (set to true if using HTTPS)
SESSION_COOKIE_SECURE=false

# Typing Indicator (milliseconds, 0 to disable)
TYPING_DELAY_MS=1500

# Keepalive (for Render free tier)
KEEPALIVE_URL=https://your-app.onrender.com/ping
KEEPALIVE_INTERVAL_MINUTES=14

# AI Providers (optional - add the ones you want to use)
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx
GEMINI_API_KEY=xxx
GROQ_API_KEY=xxx
OPENROUTER_API_KEY=xxx

# Advanced Settings (optional)
QUERY_CACHE_SIZE=1000
CACHE_TTL=300000
DISABLE_MESSAGE_LOGGING=false
